{
    "type": "array",
    "properties": [
        {
            "key": "cluster",
            "description": "",
            "type": "array",
            "properties": [
                {
                    "key": "name",
                    "label": "Name",
                    "description": "",
                    "type": "string",
                    "default": "Grafana Service",
                    "required": "no"
                },
                {
                    "key": "description",
                    "label": "Description",
                    "description": "",
                    "type": "string",
                    "default": "",
                    "required": "no"
                },
                {
                    "key": "vxnet",
                    "label": "vxnet",
                    "description": "Choose a vxnet to join",
                    "type": "string",
                    "default": "",
                    "required": "yes"
                },
                {
                    "key": "grafana_node",
                    "label": "Grafana Node",
                    "description": "",
                    "type": "array",
                    "properties": [
                        {
                            "key": "count",
                            "label": "Node Count",
                            "description": "Number of nodes for the cluster to create",
                            "type": "integer",
                            "default": 1,
                            "range": [
                                1
                            ],
                            "required": "yes"
                        },
                        {
                            "key": "cpu",
                            "label": "CPU",
                            "description": "CPUs core number",
                            "type": "integer",
                            "default": 1,
                            "range": [
                                1,
                                2,
                                4,
                                8,
                                16
                            ],
                            "required": "yes"
                        },
                        {
                            "key": "memory",
                            "label": "Memory",
                            "description": "Memory size",
                            "type": "integer",
                            "default": 2048,
                            "range": [
                                2048,
                                4096,
                                8192,
                                16384,
                                24576
                            ],
                            "required": "yes"
                        },
                        {
                            "key": "instance_class",
                            "label": "Instance Class",
                            "description": "",
                            "type": "integer",
                            "default": 0,
                            "range": [
                                0,
                                1
                            ],
                            "required": "yes"
                        },
                        {
                            "key": "volume_size",
                            "label": "Volume size",
                            "description": "",
                            "type": "integer",
                            "min": 10,
                            "max": 1000,
                            "step": 10,
                            "default": 20,
                            "required": "no"
                        }
                    ]
                }
            ]
        },
        {
            "key": "service_params",
            "description": "Custom service configuration properties",
            "type": "array",
            "properties": [
                {
                    "key": "job_name",
                    "label": "JobName",
                    "description": "job name in prometheus.yml, for example: radon",
                    "type": "string",
                    "required": "yes"
                },
                {
                    "key": "ip",
                    "label": "IP",
                    "description": "targets in prometheus.yml, for example: 127.0.0.1",
                    "type": "string",
                    "pattern": "^((25[0-5]|2[0-4]\\d|[1]{1}\\d{1}\\d{1}|[1-9]{1}\\d{1}|\\d{1})($|(?!\\.$)\\.)){4}$",
                    "required": "yes"
                },
                {
                    "key": "port",
                    "label": "Port",
                    "description": "targets in prometheus.yml, for example: 13308",
                    "type": "integer",
                    "max": 65535,
                    "required": "yes"
                },
                {
                    "key": "instance",
                    "label": "Instance",
                    "description": "instance label in prometheus.yml",
                    "type": "string",
                    "required": "yes"
                },
                {
                    "key": "newpasswd",
                    "label": "newPassword",
                    "description": "Reset the grafana's admin password.",
                    "type": "password",
                    "pattern": "^.{5,30}$",
                    "default": "admin",
                    "required": "yes"
                }
            ]
        }, {
            "key": "env",
            "description": "Application configuration properties",
            "type": "array",
            "properties": [
                {
                    "key": "grafana_port",
                    "label": "Grafana_port",
                    "description": "The grafana's http port to use.",
                    "type": "integer",
                    "min": 3000,
                    "max": 65535,
                    "default": 3000,
                    "required": "no"
                }, 
                {
                    "key": "admin_user",
                    "label": "Admin_user",
                    "description": "Default grafana admin user, created on startup.",
                    "type": "string",
                    "default": "admin",
                    "changeable": false,
                    "pattern": "^\\w{1,30}$",
                    "required": "no"
                }, 
                {
                    "key": "admin_password",
                    "label": "Admin_password",
                    "description": "Default admin password, can be changed before first start of grafana,  or in profile settings.",
                    "changeable": false,
                    "default": "admin",
                    "type": "password",
                    "pattern": "^.{5,30}$",
                    "required": "no"
                }, 
                {
                    "key": "prometheus_port",
                    "label": "Prometheus_port",
                    "description": "The prometheus's http port to use.",
                    "type": "integer",
                    "min": 9090,
                    "max": 65535,
                    "default": 9090,
                    "required": "no"
                }, 
                {
                    "key": "tsdb_retention",
                    "label": "TSDB_retention",
                    "description": "This determines when to remove old data. Defaults to 15d.",
                    "type": "string",
                    "default": "15d",
                    "pattern": "^[1-9]\\d*d$",
                    "required": "no"
                }
            ]
        }
    ]
}